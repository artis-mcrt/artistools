{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "bumpVersion": "major",
  "pre-commit": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "* 9 * * 2"
    ]
  },
  "rangeStrategy": "update-lockfile",
  "schedule": [
    "* 9 * * 2"
  ]
}
