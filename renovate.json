{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "bumpVersion": "minor",
  "pre-commit": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "every weekday"
    ]
  },
  "rangeStrategy": "update-lockfile",
  "schedule": [
    "every weekday"
  ]
}
